<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    {{>css}}
    <title>Home</title>
</head>

<body onload="loadFunc()">
    <div id="loding"></div>
    {{>navbar}}

    <!-- main hedaer -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="row">
                    <!-- left side division  -->
                    <div class="col-md-6 col-12 main_header_left">
                        <h2>Welcome to Weather Today</h2>
                        <h1>Get The Latest <span class="text_clr">Weather</span> info of Your City from Us.</h1>
                        <a href="/weather"><button>Check Now</button></a>
                    </div>
                    <!-- right side division  -->
                    <div class="col-md-6 col-12 main_header_right">
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="w-100" src="img/bg2.png" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="w-100" src="img/bg3.png" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="w-100" src="img/bg4.png" alt="Third slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="w-100" src="img/bg5.png" alt="Third slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                                data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                                data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer code  -->
    {{>footer}}
    {{>js}}
    <script>
        
        var preloder = document.getElementById("loding");
        function loadFunc() {
            preloder.style.display = 'none';
        }
        
    </script>
</body>

</html>